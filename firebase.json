{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/host/**",
                "destination": "/host/index.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}